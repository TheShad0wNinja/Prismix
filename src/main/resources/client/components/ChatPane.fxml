<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tavern.client.components.ChatPane"
            >

    <center>
        <ScrollPane style="-fx-background: -fx-background-color-theme" styleClass="scroll-bar" fx:id="chatScrollPane" fitToWidth="true" maxWidth="Infinity">
            <VBox fx:id="chatArea" spacing="20" maxWidth="Infinity">
                <padding>
                    <Insets topRightBottomLeft="10" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <fx:include source="InputBar.fxml" fx:id="inputBar" />
    </bottom>

</BorderPane>
