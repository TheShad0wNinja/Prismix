<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root
        type="javafx.scene.layout.BorderPane"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-color: -fx-surface-color;-fx-text-fill: -fx-on-surface-color">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <top>
        <VBox spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Search by Room Name:" /> <TextField fx:id="searchField" promptText="Enter room name..." />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="resultsPanel" spacing="5.0">
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="cancelButton" minWidth="80.0" onAction="#handleCancelAction" text="Cancel" /> </children>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</fx:root>